@using System.Linq
@model IEnumerable<carnage.Models.SeasonalDrop>


<!-- hero: prefer Url.Content if using ~/ -->
<section class="hero">
    <img src="@Url.Content("~/images/homeImage.png")" alt="Home Image" class="img-fluid" />
    <button>Shop Now</button>
</section>
<section class="content">
    <h2>@Model.FirstOrDefault()?.SeasonName</h2>

    <div class="vertical-scroll-container">
        @foreach (var item in Model)
        {
            <div class="product-card">
                <div class="image-wrapper">
                    <img src="@(string.IsNullOrWhiteSpace(item.ImageUrl1) ? Url.Content("~/images/homeImage.png") : item.ImageUrl1)"
                         alt="@item.Title" class="default-img" />
                    <img src="@(string.IsNullOrWhiteSpace(item.ImageUrl2) ? item.ImageUrl1 : item.ImageUrl2)"
                         alt="@item.Title" class="hover-img" />
                </div>

                <div class="product-details">
                    <p class="title" style="font-size:0.9rem; font-weight:900px;">@item.Title</p>
                    <p class="meta" style="font-size:0.75rem; color:rgb(87, 83, 83)">@item.Colors</p>
                    <p class="meta" style="font-size:0.75rem; color:rgb(87, 83, 83) ;">@item.Sizes</p>
                    <p class="price" style="font-size:0.8rem;color:rgb(87, 83, 83); font-weight:500;">@item.Price.ToString("C")</p>
                </div>
            </div>
        }
    </div>
</section>

